{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "itec-courts",
  "title": "ITEC Tennis Courts",
  "description": "Check tennis court availability at Israel Tennis & Education Centers",
  "icon": "extension-icon.png",
  "author": "adielbm",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "view-courts",
      "title": "Check Availability",
      "description": "Check available tennis courts by date",
      "mode": "view"
    },
    {
      "name": "view-rents",
      "title": "My Upcoming Rentals",
      "description": "View your upcoming court rentals",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "tennisCenter",
      "type": "dropdown",
      "required": true,
      "title": "Tennis Center",
      "description": "Select your preferred tennis center",
      "default": "2",
      "data": [
        {
          "title": "אופקים",
          "value": "12"
        },
        {
          "title": "אשקלון",
          "value": "8"
        },
        {
          "title": "באר שבע",
          "value": "11"
        },
        {
          "title": "דימונה",
          "value": "40"
        },
        {
          "title": "חיפה",
          "value": "5"
        },
        {
          "title": "טבריה",
          "value": "9"
        },
        {
          "title": "יפו",
          "value": "3"
        },
        {
          "title": "יקנעם",
          "value": "14"
        },
        {
          "title": "ירושלים",
          "value": "7"
        },
        {
          "title": "כוכב יאיר",
          "value": "46"
        },
        {
          "title": "נהריה",
          "value": "37"
        },
        {
          "title": "סאג'ור",
          "value": "15"
        },
        {
          "title": "עכו",
          "value": "16"
        },
        {
          "title": "ערד",
          "value": "6"
        },
        {
          "title": "קרית אונו",
          "value": "10"
        },
        {
          "title": "קרית שמונה",
          "value": "4"
        },
        {
          "title": "רמת השרון",
          "value": "2"
        },
        {
          "title": "תל אביב (יד אליהו)",
          "value": "13"
        }
      ]
    },
    {
      "name": "email",
      "type": "textfield",
      "required": true,
      "title": "Email",
      "description": "Your ITEC account email",
      "placeholder": "your.email@example.com"
    },
    {
      "name": "userId",
      "type": "textfield",
      "required": true,
      "title": "ID Number",
      "description": "Your Israeli ID number",
      "placeholder": "123456789"
    },
    {
      "name": "chromePath",
      "type": "textfield",
      "required": false,
      "title": "Chrome/Chromium Path (Optional)",
      "description": "Path to Chrome or Chromium executable. Leave empty to auto-detect.",
      "placeholder": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.2",
    "@raycast/utils": "^1.17.0",
    "node-fetch": "^3.3.2",
    "puppeteer-core": "^24.31.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
